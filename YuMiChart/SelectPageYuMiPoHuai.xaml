<Page x:Class="YuMiChart.SelectPageYuMiPoHuai"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
       d:DesignHeight="30" d:DesignWidth="783"
	Title="SelectPageYuMiPoHuai">

    <Grid Loaded="Grid_Load">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
            <Label x:Name="cengShuLab"></Label>
            <ComboBox x:Name="cengShuCom" SelectedIndex="0" IsEditable="False" SelectionChanged="cengShuCom_SelectionChanged"></ComboBox>
            <Label x:Name="jianCeDianLab" Margin="20,0,0,0"></Label>
            <ComboBox x:Name="jianCeDianCom" SelectedIndex="0" IsEditable="False" Margin="0,0,20,0" SelectionChanged="jianCeDianCom_SelectionChanged"></ComboBox>
        </StackPanel>
        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
            <RadioButton x:Name="tempCheck" IsChecked="True" Click="Radio_Click"></RadioButton>
            <RadioButton x:Name="poHuaiLvCheck" IsChecked="False" Margin="20,0,0,0"  Click="Radio_Click"></RadioButton>
        </StackPanel>
    </Grid>
</Page>
